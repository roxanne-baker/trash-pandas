<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="InfusionGames.CityScramble.Views.JoinTeamView"
             xmlns:cm="clr-namespace:Caliburn.Micro.Xamarin.Forms;assembly=Caliburn.Micro.Platform.Xamarin.Forms"
             xmlns:views="clr-namespace:InfusionGames.CityScramble.Views;assembly=InfusionGames.CityScramble"
             xmlns:viewModels="clr-namespace:InfusionGames.CityScramble.ViewModels;assembly=InfusionGames.CityScramble"
             xmlns:services="clr-namespace:InfusionGames.CityScramble.Services;assembly=InfusionGames.CityScramble">

  <StackLayout VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand" Orientation="Vertical" Spacing="15">
    <Label Text="Enter a Team Code:" />
    <Entry Text="{Binding TeamCode}"/>
    <Button Text="Join Team" cm:Message.Attach="JoinTeam"/>
  </StackLayout>
</ContentPage>